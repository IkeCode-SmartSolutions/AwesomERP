@{
    Layout = "_Layout";
}

@section styles{
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/css/bootstrap-extend.min.css" />

    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/vendor/animsition/animsition.css">
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/vendor/asscrollable/asScrollable.css">
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/vendor/switchery/switchery.css">
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/vendor/slidepanel/slidePanel.css">
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/vendor/flagiconcss/flag-icon.css">

    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/fonts/webicons/web-icons.min.css">
    <link rel="stylesheet" href="/wwwroot/themes/remark/classic/global/fonts/brandicons/brandicons.min.css">

    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,300italic'>

    @RenderSection("styles", required: false)
}

@section head_scripts{

    <!--[if lt IE 9]>
      <script src="/wwwroot/themes/remark/classic/global/vendor/html5shiv/html5shiv.min.js"></script>
    <![endif]-->
    <!--[if lt IE 10]>
      <script src="/wwwroot/themes/remark/classic/global/vendor/media-match/media.match.min.js"></script>
      <script src="/wwwroot/themes/remark/classic/global/vendor/respond/respond.min.js"></script>
    <![endif]-->

    <script src="/wwwroot/themes/remark/classic/global/vendor/breakpoints/breakpoints.js"></script>
    <script>
        Breakpoints();
    </script>

    @RenderSection("head_scripts", required: false)
}

<nav class="site-navbar navbar navbar-default navbar-fixed-top navbar-mega" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggler hamburger hamburger-close navbar-toggler-left hided" data-toggle="menubar">
            <span class="sr-only">Toggle navigation</span>
            <span class="hamburger-bar"></span>
        </button>
        <button type="button" class="navbar-toggler collapsed" data-target="#site-navbar-collapse" data-toggle="collapse">
            <i class="icon wb-more-horizontal" aria-hidden="true"></i>
        </button>
        <div class="navbar-brand navbar-brand-center site-gridmenu-toggle" data-toggle="gridmenu">
            <img class="navbar-brand-logo" src="/wwwroot/themes/remark/classic/base/assets/images/logo.png" title="AwesomeERP">
            <span class="navbar-brand-text hidden-xs-down">AwesomeERP</span>
        </div>
        <button type="button" class="navbar-toggler collapsed" data-target="#site-navbar-search"
                data-toggle="collapse">
            <span class="sr-only">Toggle Search</span>
            <i class="icon wb-search" aria-hidden="true"></i>
        </button>
    </div>
    <div class="navbar-container container-fluid">
        HEADER
    </div>
</nav>

<div class="page">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Page Title</h1>
    </div>
    <!-- End Page Header -->
    <!-- Page Content -->
    <div class="page-content">
        <!-- Panel -->
        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Panel Title</h3>
            </div>
            <div class="panel-body">
                @RenderBody()
            </div>
        </div>
        <!-- End Panel -->
    </div>
    <!-- End Page Content -->
</div>


<div class="site-menubar">
    <div class="site-menubar-body">
        <div>
            <div>
                <ul class="site-menu" data-plugin="menu">
                    <!-- Menu Category-->
                    <li class="site-menu-category">Geral</li>
                    <!-- End Menu Category-->
                    <!-- Site Menu Item-->

                    <li class="site-menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="animsition-link">
                            <span class="site-menu-title">Home</span>
                        </a>
                    </li>
                    <li class="site-menu-item">
                        <a asp-area="" asp-route="Awe.Person.Module.Dashboard" class="animsition-link">
                            <span class="site-menu-title">Pessoa</span>
                        </a>
                    </li>
                    <!-- End Site Menu Item-->
                    <!-- Site Menu Item With Sub-->
                    <li class="site-menu-category">Outros</li>
                    <li class="site-menu-item has-sub">
                        <a href="javascript:void(0)">
                            <span class="site-menu-title">
                                Ajuda
                            </span>
                            <span class="site-menu-arrow"></span>
                        </a>
                        <ul class="site-menu-sub">
                            <li class="site-menu-item">
                                <a asp-area="" asp-controller="Home" asp-action="About" class="animsition-link">
                                    <span class="site-menu-title">Sobre</span>
                                </a>
                            </li>
                            <li class="site-menu-item">
                                <a asp-area="" asp-controller="Home" asp-action="Contact" class="animsition-link">
                                    <span class="site-menu-title">Contato</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- End Site Menu Item With Sub-->
                </ul>

                <div class="site-menubar-section">
                    <h5>
                        Milestone
                        <span class="pull-xs-right">30%</span>
                    </h5>
                    <div class="progress progress-xs">
                        <div class="progress-bar active" style="width: 30%;" role="progressbar"></div>
                    </div>
                    <h5>
                        Release
                        <span class="pull-xs-right">60%</span>
                    </h5>
                    <div class="progress progress-xs">
                        <div class="progress-bar progress-bar-warning" style="width: 60%;" role="progressbar"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="site-menubar-footer">
        <a href="javascript: void(0);" class="fold-show" data-placement="top" data-toggle="tooltip" data-original-title="Settings">
            <span class="icon wb-settings" aria-hidden="true"></span>
        </a>
        <a href="javascript: void(0);" data-placement="top" data-toggle="tooltip" data-original-title="Lock">
            <span class="icon wb-eye-close" aria-hidden="true"></span>
        </a>
        <a href="javascript: void(0);" data-placement="top" data-toggle="tooltip" data-original-title="Logout">
            <span class="icon wb-power" aria-hidden="true"></span>
        </a>
    </div>
</div>

